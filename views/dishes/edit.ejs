<% include ../partials/header %>
    <main>

        <div class="container dishes">



            <div class="dishes">
                <div class="dish-container">
                    <div class="dish">
                        <img class="image-dish" src="public/img/<%=dish.Name%>.jpg">
                        <div class="dish-body">
                            <form action="/dishes/<%= dish._id %>?_method=PUT" method="POST" class="form-container" id="form">
                                <div class="form-group">
                                    <label for="Name">NAME</label>
                                    <input type="text" class="form-control" name="dish[Name]" value="<%=dish.Name %>">
                                </div>
                                <div class="form-group">
                                    <label for="preis">PREIS</label>
                                    <input type="text" class="form-control" name="dish[preis]" value="<%=dish.preis %>">
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-primary">Speichern!</button>

                                </div>
                            </form>
                            <a href="/dishes">Abbrechen</a>
                        </div>

                    </div>

                </div>

            </div>


        </div>

    </main>

    <% include ../partials/footer %>
